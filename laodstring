-- Make the GUIs draggable
local function makeDraggable(gui, draggingElement)
    local dragging = false
    local dragInput, dragStart, startPos
    
    local function update(input)
        local delta = input.Position - dragStart
        gui.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
    
    draggingElement.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = gui.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    draggingElement.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            update(input)
        end
    end)
end

-- Make the GUIs draggable
makeDraggable(mainFrame, mainTitle)
makeDraggable(antiAfkFrame, antiAfkTitle)
makeDraggable(minimizedButton, minimizedButton)

-- Function to update time and coins per hour display
local function updateStats()
    local elapsedTime = tick() - startTime
    elapsedTimeLabel.Text = string.format("%.1f", elapsedTime)
    
    if elapsedTime > 0 then
        local coinsPerHour = math.floor((coinsCollected / elapsedTime) * 3600)
        coinsPerHourLabel.Text = tostring(coinsPerHour) .. "/h"
    end
end

-- Animation functions
local function createOpenAnimation(gui)
    local originalSize = gui.Size
    local originalPosition = gui.Position
    
    gui.Size = UDim2.new(0, 0, 0, 0)
    gui.Position = UDim2.new(originalPosition.X.Scale + 0.5, originalPosition.X.Offset, originalPosition.Y.Scale + 0.5, originalPosition.Y.Offset)
    
    local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Elastic, Enum.EasingDirection.Out)
    local tweenSize = TweenService:Create(gui, tweenInfo, {Size = originalSize})
    local tweenPosition = TweenService:Create(gui, tweenInfo, {Position = originalPosition})
    
    tweenSize:Play()
    tweenPosition:Play()
end

local function createCloseAnimation(gui, callback)
    local originalSize = gui.Size
    local originalPosition = gui.Position
    local targetPosition = UDim2.new(originalPosition.X.Scale + 0.5, originalPosition.X.Offset, originalPosition.Y.Scale + 0.5, originalPosition.Y.Offset)
    
    local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In)
    local tweenSize = TweenService:Create(gui, tweenInfo, {Size = UDim2.new(0, 0, 0, 0)})
    local tweenPosition = TweenService:Create(gui, tweenInfo, {Position = targetPosition})
    
    tweenSize:Play()
    tweenPosition:Play()
    
    tweenSize.Completed:Connect(function()
        if callback then
            callback()
        end
    end)
end

-- Function to toggle minimized state with animation
local function toggleMinimize()
    if isMinimized then
        -- Show main GUI with animation
        minimizedGui.Enabled = false
        mainGui.Enabled = true
        antiAfkGui.Enabled = true
        createOpenAnimation(mainFrame)
        createOpenAnimation(antiAfkFrame)
    else
        -- Minimize with animation
        createCloseAnimation(mainFrame, function()
            mainGui.Enabled = false
            createCloseAnimation(antiAfkFrame, function()
                antiAfkGui.Enabled = false
                minimizedGui.Enabled = true
                createOpenAnimation(minimizedButton)
            end)
        end)
    end
    
    isMinimized = not isMinimized
end

-- Connect the minimize button with proper error handling
local minimizeButtonConnection = nil
local minimizedButtonConnection = nil

local function setupMinimizeButtons()
    -- Disconnect any existing connections to prevent duplicates
    if minimizeButtonConnection then
        minimizeButtonConnection:Disconnect()
    end
    if minimizedButtonConnection then
        minimizedButtonConnection:Disconnect()
    end
    
    -- Create new connections
    minimizeButtonConnection = minimizeButton.MouseButton1Click:Connect(toggleMinimize)
    minimizedButtonConnection = minimizedButton.MouseButton1Click:Connect(toggleMinimize)
end

-- Set up the minimize buttons
setupMinimizeButtons()

-- Function to initialize the character
local function initializeCharacter(character)
    local hrp = character:WaitForChild("HumanoidRootPart")
    local humanoid = character:WaitForChild("Humanoid")
    
    -- Connect to character death event to ensure GUI stays visible
    humanoid.Died:Connect(function()
        coinStatus.Text = "Character died, waiting for respawn..."
        -- Make sure GUIs are still visible and buttons still work
        setupMinimizeButtons()
    end)

    -- Enable noclip for the character
    local noclipConnection = RunService.Stepped:Connect(function()
        for _, part in ipairs(character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.CanCollide = false
            end
        end
    end)
    
    -- Clean up noclip when character dies
    humanoid.Died:Connect(function()
        noclipConnection:Disconnect()
    end)

    -- Create a BodyVelocity object for smooth movement
    local bodyVelocity = Instance.new("BodyVelocity")
    bodyVelocity.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
    bodyVelocity.Velocity = Vector3.zero
    bodyVelocity.Parent = hrp
    
    -- Make everything else invisible except coins
    local function updateVisibility()
        -- Make character transparent
        for _, part in ipairs(character:GetDescendants()) do
            if part:IsA("BasePart") and part.Name ~= "HumanoidRootPart" then
                part.Transparency = 0.8
            end
        end
        
        -- Make other objects transparent
        for _, obj in ipairs(workspace:GetDescendants()) do
            if obj:IsA("BasePart") and not obj:IsDescendantOf(character) then
                if obj.Name == "MainCoin" then
                    -- Highlight coins
                    if not obj:FindFirstChild("Highlight") then
                        local highlight = Instance.new("Highlight")
                        highlight.
