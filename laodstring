-- Minimize functionality
local isMinimized = false
G2L["6"].MouseButton1Click:Connect(function()
    if isMinimized then
        G2L["2"].Size = UDim2.new(0, 272, 0, 383) -- Restore the GUI size
        isMinimized = false
    else
        G2L["2"].Size = UDim2.new(0, 272, 0, 50) -- Minimize the GUI
        isMinimized = true
    end
end)

-- Button Toggle functionality for Anti AFK and Coin Farm buttons
local function toggleButton(button, activeText, inactiveText)
    local isActive = false
    button.MouseButton1Click:Connect(function()
        if isActive then
            button.BackgroundColor3 = Color3.fromRGB(255, 255, 255)  -- Normal color
            button.Text = inactiveText
            isActive = false
        else
            button.BackgroundColor3 = Color3.fromRGB(0, 255, 0)  -- Active color (Green)
            button.Text = activeText
            isActive = true
        end
    end)
end

-- Setup button toggles
toggleButton(G2L["a"], "Coin Farm Active", "Coin Farm")
toggleButton(G2L["e"], "Anti AFK Active", "Anti - AFK")

return G2L["1"], require
