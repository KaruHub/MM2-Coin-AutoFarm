da.Size = UDim2.new(0, 370, 0, 107)

-- Setup TextLabel for "Critc Scripts"
_b.Parent = da
_b.BackgroundColor3 = Color3.new(1, 1, 0)  -- Yellow
_b.Position = UDim2.new(0, 0, 0.8, 0)
